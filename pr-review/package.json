{
  "name": "pr-review",
  "description": "GitHub Actions that creates an AI-powered code review for pull requests",
  "type": "module",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "build": "npx ncc build src/index.ts -o dist --source-map --license licenses.txt",
    "prestart": "npm install --frozen-lockfile",
    "start": "source .env.test; npx tsx src/index.ts",
    "lint": "npx eslint . --report-unused-disable-directives",
    "prettier": "npx prettier --check .",
    "prettier:fix": "npx prettier --write ."
  },
  "dependencies": {
    "@actions/core": "1.11.1",
    "@actions/github": "6.0.1",
    "@octokit/action": "7.0.2",
    "@octokit/plugin-retry": "6.1.0",
    "@octokit/plugin-throttling": "8.2.0",
    "@octokit/webhooks": "13.9.0",
    "@sap-ai-sdk/ai-api": "1.15.0",
    "@sap-ai-sdk/orchestration": "1.15.0",
    "axios": "1.10.0",
    "minimatch": "10.0.3",
    "mollitia": "0.2.0",
    "octokit": "5.0.3",
    "parse-diff": "0.11.1",
    "zod": "3.25.74",
    "zod-to-json-schema": "3.24.6"
  },
  "devDependencies": {
    "@eslint/js": "9.30.1",
    "@types/micromatch": "4.0.9",
    "@types/node": "22.16.0",
    "@typescript-eslint/eslint-plugin": "7.18.0",
    "@typescript-eslint/parser": "7.18.0",
    "@vercel/ncc": "0.38.3",
    "eslint": "8.57.1",
    "eslint-config-airbnb": "19.0.4",
    "eslint-config-airbnb-typescript": "18.0.0",
    "eslint-config-prettier": "10.1.5",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-prettier": "5.5.1",
    "eslint-plugin-sonarjs": "3.0.4",
    "eslint-plugin-unicorn": "56.0.1",
    "prettier": "3.6.2",
    "rimraf": "6.0.1",
    "ts-node": "10.9.2",
    "typescript": "5.8.3",
    "yaml": "2.8.0"
  }
}
